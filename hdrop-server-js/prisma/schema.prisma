// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model File {
  id Int @id @default(autoincrement())

  // Tokens
  uuid        String @unique
  accessToken String @unique
  updateToken String

  // File location
  dataUrl String?

  // File metadata
  fileNameData String
  fileNameHash String
  salt         String
  iv           String

  // Timestamps
  createdAt DateTime @default(now())
  expiresAt DateTime
}
